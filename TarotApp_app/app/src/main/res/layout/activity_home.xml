<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 왼쪽 상단 앱 로고 -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/tarot_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- 앱 안내 문구 -->
    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="미래의 흐름을 읽어보고 싶으신가요?\n기꺼이 당신의 안내자가 되어드리겠습니다."
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- 오늘의 운세 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_daily"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:strokeColor="@color/purple"
        android:text="오늘의 운세"
        app:layout_constraintTop_toBottomOf="@id/tv_home_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="7dp"
        android:layout_margin="60dp"/>

    <!-- 금전운 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_money"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:strokeColor="@color/purple"
        android:text="금전운"
        app:layout_constraintTop_toBottomOf="@id/btn_daily"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="7dp"
        android:layout_margin="60dp" />

    <!-- 연애운 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_love"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:strokeColor="@color/purple"
        android:text="연애운"
        app:layout_constraintTop_toBottomOf="@id/btn_money"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="7dp"
        android:layout_margin="60dp" />

    <!-- 푸터 -->
    <TextView
        android:id="@+id/tv_footer"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:background="@color/purple"
        android:text="“미래를 위해서 무엇을 해야 하는지 결코 알 수 없다. \n그래서 인생은 멋진 것이다.”\n-   톨스토이 -\n\n2025. Sun All rights reserved."
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>