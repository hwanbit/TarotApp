<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp">

            <!-- 왼쪽 상단 앱 로고 -->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/tarot_logo_img"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:padding="4dp" />

            <!-- 중앙 텍스트 (타로 주제) -->
            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@color/purple"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="70dp"
                android:text="오늘의 운세"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>

            <!-- 오른쪽 홈 버튼 (클릭 가능) -->
            <ImageView
                android:id="@+id/btn_home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="15dp"
                android:padding="4dp"
                android:src="@drawable/home"
                android:clickable="true"/>

        </LinearLayout>

        <!-- 메인 안내문 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세 장의 카드가 선택되었습니다."
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14dp"/>

        <!-- 카드 3장 이미지 배치 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/iv_card1"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tarot_back"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/iv_card2"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tarot_back"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/iv_card3"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tarot_back"/>
        </LinearLayout>

        <!-- 타로 결과 전체 텍스트 (뽑은 카드 ~ 해석 ~ 조언 등) -->
        <TextView
            android:id="@+id/tv_card_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택한 카드의 이름"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:lineSpacingExtra="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginBottom="28dp"/>

        <TextView
            android:id="@+id/tv_card_keywords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택한 카드의 키워드"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:lineSpacingExtra="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginBottom="5dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0E9FA"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginBottom="28dp">

            <!-- LLM 결과 텍스트뷰 -->
            <TextView
                android:id="@+id/tv_tarot_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="여기에 LLM 결과가 표시됩니다."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="30dp"/>

            <!-- 텍스트뷰 중앙에 겹쳐서 스피너 출력 (LLM 결과 출력 대기) -->
            <ProgressBar
                android:id="@+id/progress_bar"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI 타로 리딩중..."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:layout_gravity="center_horizontal|bottom"
                android:visibility="gone"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="10dp"/>
        </FrameLayout>

        <!-- 다시 선택하기 버튼 (클릭 가능) -->
        <Button
            android:id="@+id/btn_retry"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:text="다시 선택하기 ➔"
            android:textStyle="bold"
            android:backgroundTint="@color/purple"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"/>

        <!-- 푸터 -->
        <TextView
            android:id="@+id/tv_copyright"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="2025. Sun All rights reserved."
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="@color/purple"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>
